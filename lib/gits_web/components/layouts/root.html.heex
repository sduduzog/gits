<!DOCTYPE html>
<html lang="en" class="h-screen overflow-hidden">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <SEO.juice
      conn={@conn}
      config={GitsWeb.SEO.config()}
      page_title={assigns[:page_title] || "Home"}
    />
    <link phx-track-static rel="stylesheet" href={~p"/assets/app.css"} />
    <Gits.Turnstile.script />

    <script src="//app.storyblok.com/f/storyblok-v2-latest.js" type="text/javascript">
    </script>
    <script defer phx-track-static type="module" src={~p"/assets/app.js"}>
    </script>
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript">
    </script>
  </head>

  <body class="font-poppins leading-tight antialiased bg-white dark:bg-black h-screen overflow-hidden">
    {@inner_content}
  </body>
</html>
