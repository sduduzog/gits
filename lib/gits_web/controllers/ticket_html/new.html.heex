<h1 class="font-poppins font-semibold text-3xl text-gray-900">Create ticket</h1>

<.simple_form
  :let={f}
  for={@form}
  action={~p"/accounts/#{@account_id}/events/#{@event_id}/tickets"}
  method="POST"
>
  <.input type="text" label="Name" field={f[:name]} />
  <.input type="number" label="Price" field={f[:price]} />

  <div class="flex gap-6 items-center">
    <.button>Create</.button>
  </div>
</.simple_form>
