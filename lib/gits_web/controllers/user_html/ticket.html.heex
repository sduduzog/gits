<div :if={false} class="min-h-dvh sticky top-0 z-10 mx-auto max-w-screen-sm bg-zinc-50 px-2 pb-2">
  <div class="flex items-center justify-between p-4">
    <.link replace={true} navigate={~p"/my/tickets"} class="flex rounded-lg hover:bg-zinc-100 p-2">
      <.icon name="hero-arrow-left-mini" />
    </.link>
    <span class="font-semibold">General</span>
